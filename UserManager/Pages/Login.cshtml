@page
@model UserManager.Pages.Login

@{
    Layout = "Shared/_Layout";
}

<!DOCTYPE html>

<body>
    <div class="container d-flex justify-content-center align-items-start min-vh-100">
        <div class="centered-form mt-5 p-4 border rounded">
            <h2 class="text-center mb-4">Login</h2>
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="@Model.User.Email">Email</label>
                    <input asp-for="@Model.User.Email" type="email" class="form-control"/>
                </div>
            
                <div class="form-group mb-4">
                    <label asp-for="@Model.User.Password">Password</label>
                    <input asp-for="@Model.User.Password" type="password" class="form-control"/>
                </div>
                
                <div  asp-validation-summary="All" class="text-danger"></div>
                
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</body>